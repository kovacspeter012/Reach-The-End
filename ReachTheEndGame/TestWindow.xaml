<Window x:Class="ReachTheEndGame.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReachTheEndGame"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800" FontSize="16">
    <Grid>
        <StackPanel Grid.Row="0"  VerticalAlignment="Center">
            <TextBox Name="tbGuess" Height="40" Width="200" PreviewTextInput="tbGuess_PreviewTextInput"/>
            <Button Name="btnGuess" Height="40" Width="200" Content="Tipp" Margin="0 20 0 20" Click="btnGuess_Click"/>
            <Label Name="lblGuess" Height="40" Width="200" Content="Találd ki a számot"/>
        </StackPanel>
    </Grid>
</Window>
